<AnchorPane minHeight="-Infinity" prefHeight="240.0" prefWidth="350.0" styleClass="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Settings">
